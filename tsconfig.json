{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "strict": false
    },
    "include": [
        "./src/**/*"
    ]
}